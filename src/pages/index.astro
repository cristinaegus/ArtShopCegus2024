---
import Layout from '../layouts/Layout.astro';
import Carousel from '../components/Carousel.astro';
---

<Layout title="Home | Art Shop">
	<main class="max-w-6xl mx-auto px-4 py-8">
		
		</div>
			<div class="logosign">
			<img src="/images/Verde.jpg	" alt="CEGUSSING" class="w-100 h-100 object-cover rounded"/>
		</div>
		<h1 class="text-4xl font-bold text-center mb-8">Welcome to  My Art Shop</h1>
		<div class="bg-white rounded-lg shadow-md p-6">
			<p class="text-lg text-gray-700 mb-4">
				Discover unique artworks from talented artists around the world.
			</p>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
				<div class="bg-purple-50 p-6 rounded-lg">
					<h2 class="text-2xl font-semibold mb-4">Featured Collections</h2>
					<p class="text-gray-600">Explore our curated collections of stunning artworks.</p>
				</div>
				<div class="bg-purple-50 p-6 rounded-lg">
					<h2 class="text-2xl font-semibold mb-4">New Arrivals</h2>
					<p class="text-gray-600">Check out our latest additions to the gallery. New custom products with my artworks are available. </p>
				</div>
			</div>
		</div>
		<style>
			.logosign {
			  display: block;
			  margin: auto;
			  width: 200px; /* ancho del logo en píxeles */
			  height: 200px; /* alto del logo en píxeles */
			}
		  </style>

<script>
	function formatoMoneda(precio, simbolo = '€') {
	  return `${simbolo} ${precio.toFixed(2)}`;
	}
  </script>	  
	</main>
	<Carousel />
</Layout>